{
  "compilerOptions": {
    "outDir": "build",
    // https://www.typescriptlang.org/docs/handbook/2/modules.html
    "module": "esnext",
    // https://www.typescriptlang.org/tsconfig#target
    "target": "es5",
    // 获得ts的类型检查和提示
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "node", //声明如何处理模块， 文件查找方式， 枚举值：classic、node会根据module字段来决定默认值（推荐手动设置为node）
    "allowSyntheticDefaultImports": true
  },

  // 需要编译什么文件
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx", "src/setupTests.ts"]
}
